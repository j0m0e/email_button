{
  "manifest_version": 2,

  "name": "Email This Page",
  "description": "This extension emails the current page you are viewing",
  "version": "1.0",

  "background": {
    "scripts": ["popup.js"],
    "persistent": false
  },

  "browser_action": {
    "default_icon": "icon.png",
    "default_title": "Click to email this page."
  },
  "permissions": [
    "activeTab"
  ]
}
